<%# Navbar %>
<%= render partial: "shared/navbar" %>
<br>
<%# New and Select %>
<div class="container text-center">
  <div class="row" id="assort">
    <div class="col-xs-2 box m-4 p-5">
      <%= link_to 'new', new_task_path %>
    </div>  
    <div class="col m-4 p-3">
      <%= form_tag tasks_path, method: :get do %>    
        <%= select_tag :state, options_for_select(@states), :include_blank => "All", class:"custom-select" %>
        <%= submit_tag "Go", name: nil, class:" btn card-btn" %>
      <% end %>
    </div>
  </div>
</div>
<br>
<%# Task cards  %>
<%= render partial: 'shared/task_list' %>
<%# pagination %>
      <div class="col-md-6 offset-md-4">
        <%= paginate @tasks, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"%>
      </div>
  </div>
</div>

